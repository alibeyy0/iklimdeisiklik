from flask import Flask, render_template, request, redirect, url_for
from datetime import datetime

app = Flask(__name__)

soz_verenler = []
soz_sayaci = 0
kayitli_nickler = set()
son_soz_tarihi = None

@app.route("/", methods=["GET", "POST"])
def index():
    global soz_sayaci, son_soz_tarihi
    if request.method == "POST":
        nick = request.form["nick"].strip()
        mesaj = request.form["mesaj"].strip()
        if nick and nick not in kayitli_nickler:
            soz_sayaci += 1
            zaman = datetime.now().strftime("%d.%m.%Y %H:%M:%S")
            soz_verenler.append({"nick": nick, "mesaj": mesaj, "tarih": zaman})
            kayitli_nickler.add(nick)
            son_soz_tarihi = zaman
        return redirect(url_for("index"))
    son_bes_kisi = list(reversed(soz_verenler[-5:]))
    return render_template("index.html", soz_sayaci=soz_sayaci, son_soz_tarihi=son_soz_tarihi, son_bes_kisi=son_bes_kisi)

@app.route("/bilgilendirme")
def bilgilendirme():
    return render_template("bilgi.html")

@app.route("/kurbanlar")
def kurbanlar():
    return render_template("kurbanlar.html")

def hesapla_kisa(cevaplar):
    puan = sum(cevaplar)
    karbon_ay = puan * 20
    karbon_yil = karbon_ay * 12
    su_ay = puan * 150
    su_yil = su_ay * 12
    oran = round((puan / (len(cevaplar) * 4)) * 100)
    if oran < 30:
        durum = "YaÅŸam tarzÄ±nÄ±z Ã§evre dostu."
    elif oran < 60:
        durum = "Ortalama Ã§evresel etki. GeliÅŸtirme alanlarÄ±nÄ±z var."
    else:
        durum = "YÃ¼ksek Ã§evresel etki! DeÄŸiÅŸim gerekli olabilir."
    return karbon_ay, karbon_yil, su_ay, su_yil, oran, durum

def hesapla_detayli(cevaplar):
    puan = sum(cevaplar)
    karbon_ay = round(puan * 22.7, 2)
    karbon_yil = round(karbon_ay * 12, 2)
    su_ay = round(puan * 173.5, 2)
    su_yil = round(su_ay * 12, 2)
    oran = round((puan / (len(cevaplar) * 4)) * 100)
    if oran < 30:
        durum = "DetaylÄ± test sonucu: yaÅŸam tarzÄ±nÄ±z oldukÃ§a Ã§evreci."
    elif oran < 60:
        durum = "DetaylÄ± test sonucu: ortalama dÃ¼zeyde etki var, azaltÄ±labilir."
    else:
        durum = "DetaylÄ± test sonucu: Ã§evre Ã¼zerindeki etkiniz yÃ¼ksek, iyileÅŸtirme ÅŸart."
    return karbon_ay, karbon_yil, su_ay, su_yil, oran, durum

def cevap_analizi(cevaplar):
    analiz = []
    if len(cevaplar) > 0 and cevaplar[0] >= 4:
        analiz.append("ðŸš— Araba kullanÄ±mÄ±nÄ±z yÃ¼ksek, karbon ayak izinizi artÄ±rÄ±yor.")
    if len(cevaplar) > 1 and cevaplar[1] >= 4:
        analiz.append("ðŸ¥© Et tÃ¼ketiminiz fazla, bitkisel beslenmeye aÄŸÄ±rlÄ±k verebilirsiniz.")
    if len(cevaplar) > 2 and cevaplar[2] <= 2:
        analiz.append("ðŸ’¡ Enerji tasarrufu konusunda geliÅŸme saÄŸlayabilirsiniz.")
    if len(cevaplar) > 3 and cevaplar[3] <= 2:
        analiz.append("â™»ï¸ Geri dÃ¶nÃ¼ÅŸÃ¼m alÄ±ÅŸkanlÄ±ÄŸÄ±nÄ±zÄ± artÄ±rmanÄ±z Ã§evreye bÃ¼yÃ¼k katkÄ± saÄŸlar.")
    if len(cevaplar) > 6 and cevaplar[6] <= 2:
        analiz.append("ðŸ”Œ Elektronik cihazlarÄ± kullanmadÄ±ÄŸÄ±nÄ±zda kapatmak enerji tasarrufuna katkÄ± saÄŸlar.")
    if not analiz:
        analiz.append("ðŸŽ‰ Harika! CevaplarÄ±nÄ±za gÃ¶re yaÅŸam tarzÄ±nÄ±z oldukÃ§a Ã§evreci gÃ¶rÃ¼nÃ¼yor.")
    return analiz

@app.route("/senin-etkin", methods=["GET", "POST"])
def senin_etkin():
    if request.method == "POST":
        test_turu = request.form.get("test_turu")
        soru_sayisi = 7 if test_turu == "kisa" else 15
        cevaplar = []
        for i in range(1, soru_sayisi + 1):
            val = request.form.get(f"soru{i}")
            if val is None:
                return render_template("senin_etkin.html", test_turu=test_turu, hata="TÃ¼m sorularÄ± cevaplayÄ±nÄ±z.")
            cevaplar.append(int(val))
        if test_turu == "kisa":
            karbon_ay, karbon_yil, su_ay, su_yil, oran, durum = hesapla_kisa(cevaplar)
        else:
            karbon_ay, karbon_yil, su_ay, su_yil, oran, durum = hesapla_detayli(cevaplar)
        analizler = cevap_analizi(cevaplar)
        sonuc = {
            "puan_orani": oran,
            "puan_text": durum,
            "aciklama": f"AylÄ±k su tÃ¼ketimi: {su_ay} L â€¢ YÄ±llÄ±k su: {su_yil} L â€¢ AylÄ±k karbon: {karbon_ay} kg COâ‚‚ â€¢ YÄ±llÄ±k karbon: {karbon_yil} kg COâ‚‚",
            "tavsiyeler": analizler
        }
        return render_template("senin_etkin.html", test_turu=test_turu, sonuc=sonuc)
    return render_template("senin_etkin.html", test_turu=None)

if __name__ == "__main__":
    app.run(debug=True)
